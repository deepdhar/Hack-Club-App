<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tool:context=".MainActivity"
    android:background="@drawable/bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hackclubImageHome1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:maxHeight="140dp"
            android:maxWidth="140dp"
            android:src="@drawable/flag_orpheus_top"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/homeCardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="13dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/descriptionHeadTextHome"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hack Club SIT"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/descriptionTextHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="A club full of coding and development related stuffs. Whether you are a beginner in programming, have intermediate knowledge on projects building and open source or youâ€™re a competitive coder, this club is for you." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/hackclubImageHome2"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_marginVertical="25dp"/>

        <Button
            android:id="@+id/homeButton1"
            android:layout_below="@id/hackclubImageHome2"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="View Members"
            android:layout_gravity="center"
            android:backgroundTint="#fe9141"
            android:textAllCaps="false"/>

    </LinearLayout>

</ScrollView>